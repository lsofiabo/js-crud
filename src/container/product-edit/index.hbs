<div class='apage'>
	<div class='page-content'>

		{{#with product}}
		<div class='card'>
			<form class='form form-create-product' method='POST' action='/product-edit'>

				<h2 class='text text--title'>Product info</h2>

				<div class='form__field name'>
					<label for='name'>Product name</label>
					<input type='text' name='name' id='name' value='{{name}}' />
				</div>

				<div class='form__field price'>
					<label for='price'>Price</label>
					<input type='number' name='price' id='price' value='{{price}}' />
				</div>
				<div class='form__field id'>
					<label for='id'>ID</label>
					<input type='number' name='id' id='id' value='{{id}}' />
				</div>
				<div class='form__field description'>
					<label for='description'>Brief description</label>
					<textarea rows='4' cols='50' name='description' id='description'>{{description}}</textarea>
					<p class='text text--secondary'></p>
				</div>

				<button type='submit' class='button button--primary save'>Save changes</button>
				<a href='/product-delete?id={{id}}' class='button button--danger delete'>Delete product</a>
			</form>
			
		</div>
		{{/with}}
		
	</div>
	
</div>
